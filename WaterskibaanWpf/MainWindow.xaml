<Window x:Class="WaterskibaanWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaterskibaanWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="74*"/>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="474*"/>
        </Grid.ColumnDefinitions>
        <Canvas HorizontalAlignment="Right" x:Name="canvasWachtrijStarten" Height="100" Margin="0,280,29.6,0" VerticalAlignment="Top" Width="900" Background="Bisque" Grid.Column="2"/>
        <Canvas HorizontalAlignment="Right" Height="200" Margin="0,30,29.6,0" VerticalAlignment="Top" Width="900" Background="Bisque" Grid.Column="2">
            <Canvas x:Name="canvasWaterskibaan" Height="150" Canvas.Top="50" Width="900"/>
        </Canvas>
        <Canvas HorizontalAlignment="Right" x:Name="canvasInstructie" Height="100" Margin="0,410,29.6,0" VerticalAlignment="Top" Width="900" Background="YellowGreen" Grid.Column="2">
            <Label x:Name="lblInstructiegroep" Content="a" Canvas.Left="869" FontSize="20" RenderTransformOrigin="-43.938,0.682" Canvas.Top="10"/>
        </Canvas>
        <Canvas HorizontalAlignment="Right" x:Name="canvasWachtrijInstructie" Height="100" Margin="0,540,29.6,0" VerticalAlignment="Top" Width="900" Background="YellowGreen" Grid.Column="2">
            <Label x:Name="lblWachtrijInstructie" Content="a" Canvas.Left="834" FontSize="20"/>
            <Label x:Name="lblWachtrijStarten" Content="a" Canvas.Left="834" FontSize="20" Canvas.Top="-258"/>
        </Canvas>
        <Label Content="Lijnenvoorraad" Margin="10,606,10,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="Wachtrij Instructie" HorizontalAlignment="Left" Margin="18.4,540,0,0" VerticalAlignment="Top" FontSize="18" Grid.Column="2"/>
        <Label Content="Instructiegroep" HorizontalAlignment="Left" Margin="18.4,410,0,0" VerticalAlignment="Top" FontSize="18" Grid.Column="2"/>
        <Label Content="Wachtrij Starten" HorizontalAlignment="Left" Margin="18.4,280,0,0" VerticalAlignment="Top" FontSize="18" Grid.Column="2"/>
        <Label Content="0" HorizontalAlignment="Left" Margin="2,606,0,0" VerticalAlignment="Top" FontSize="18" Name="lblLijnenVoorraad" Grid.Column="1"/>
        <Label Content="Waterskibaan" HorizontalAlignment="Left" Margin="18.4,30,0,0" VerticalAlignment="Top" FontSize="18" Grid.Column="2"/>
        <Button x:Name="btnStartSkibaan" Content="Start" HorizontalAlignment="Left" Margin="10,581,0,0" VerticalAlignment="Top" Width="75" Click="BtnStartSkibaan_Click"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="0,581,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="Button_Click"/>
    </Grid>
</Window>
